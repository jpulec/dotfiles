{{ if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "arch") -}}
#!/usr/bin/env fish

# Enable user services managed by chezmoi
# This script runs once during chezmoi apply

echo "Enabling user services..."

# Custom services (from ~/.config/systemd/user/)
systemctl --user enable ssh-agent.service
systemctl --user enable mako.service
systemctl --user enable hyprlock.service
systemctl --user enable elephant.service
systemctl --user enable opencode.service

# System services for Hyprland session
systemctl --user enable hypridle.service
systemctl --user enable hyprpaper.service
systemctl --user enable hyprpolkitagent.service

# Syncthing
systemctl --user enable syncthing.service

# Mask gpg-agent SSH socket (we use ssh-agent instead)
systemctl --user mask gpg-agent-ssh.socket

echo "User services enabled. Run 'systemctl --user start <service>' or re-login to start them."
{{ end -}}
