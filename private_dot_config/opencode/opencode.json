{
  "$schema": "https://opencode.ai/config.json",
  "layout": "stretch",
  "snapshot": false,
  "plugin": ["@mohak34/opencode-notifier@0.1.10"],
  "permission": {
    "bash": {
      "*": "ask",
      "cat*": "allow",
      "chmod *": "allow",
      "date *": "allow",
      "diff*": "allow",
      "du*": "allow",
      "echo*": "allow",
      "find*": "allow",
      "gh run list*": "allow",
      "gh run view*": "allow",
      "git add*": "deny",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "head*": "allow",
      "jq*": "allow",
      "ls*": "allow",
      "mkdir*": "allow",
      "npm view*": "allow",
      "time*": "allow",
      "yarn *": "allow",
      "rg*": "allow",
      "grep*": "allow",
      "tail*": "allow",
      "wc*": "allow"
    }
  }
}
